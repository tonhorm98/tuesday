<project>
    <modelVersion>4.0.0</modelVersion>      <!--version of our pom.xml-->
    <groupId>app.artfully</groupId>
    <artifactId>java-27</artifactId>
    <version>demo</version>                   <!--version of our app-->
    
    
    <repositories>
        <repository>     <!--repository = the place that keeps source codes-->
            <id>spring</id>
            <url>https://repo.spring.io/milestone</url>
        </repository>    
    </repositories>
    
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId> <!--webflux ~ reactive stack-->
            <version>3.0.0-M3</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>code</sourceDirectory>
        <testSourceDirectory>test</testSourceDirectory>
        <resources>
            <resource>
                <directory>web</directory>
            </resource>
        </resources>
    </build>
    
    <properties>
        <maven.compiler.source>18</maven.compiler.source>
        <maven.compiler.target>18</maven.compiler.target>
    </properties>
</project>
